<UserControl x:Class="WatcherProject.VideoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatcherProject"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="144" Margin="4,6,4,4">
    <Grid Background="White">
        <Button Name="ChooseVideoButton" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ChooseVideoButton_Click">
            <Grid Height="100" Width="144" Margin="-2,-2,-2,-2">
                <Image Name="VideoPreview" Margin="0,1,0,20"></Image>
                <Label Name="FileName" Content="video.avg" VerticalAlignment="Bottom" Height="20" Padding="3,0,0,0" />
            </Grid>
        </Button>
        <Border Name="CurrentVideoBorder" Visibility="Hidden" BorderBrush="#FF008BFF" BorderThickness="2"></Border>
    </Grid>
</UserControl>
