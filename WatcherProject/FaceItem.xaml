<UserControl x:Class="WatcherProject.FaceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatcherProject"
             mc:Ignorable="d" 
             d:DesignHeight="116" d:DesignWidth="100">
    <Grid>
        <Border Background="White" HorizontalAlignment="Left" Height="116" VerticalAlignment="Top" Width="100"/>
        <Image Name="FaceImage" VerticalAlignment="Top" Width="100" Height="100"/>
        <Label Name="FaceName" Content="1.Имя Фамилия" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="16" Margin="0,100,0,0" Padding="0"/>
        <Button x:Name="DeleteButton" ToolTip="Удалить лицо" Click="DeleteButton_Click"  Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Height="16" Width="16" Padding="0,-1,0,0"/>

    </Grid>
</UserControl>
